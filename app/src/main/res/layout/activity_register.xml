<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewmodel"
            type="com.example.datinghaui.ui.resgister.RegisterViewModel" />
    </data>
   <ScrollView
       android:layout_width="match_parent"
       android:background="@drawable/bg_login_gradian"
       android:layout_height="match_parent">
       <LinearLayout
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/ivBack"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_margin="@dimen/margin_20dp_"
               app:layout_constraintTop_toTopOf="parent"
               android:padding="@dimen/margin_10dp_"
               android:src="@drawable/ic_baseline_arrow_back_24"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:tint="@color/colorWhite" />
           <TextView
               android:id="@+id/tvLoRegister"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Register Account"
               android:layout_gravity="center_horizontal"
               android:fontFamily="@font/covered_by_your_grace"
               android:textStyle="bold"
               app:layout_constraintRight_toRightOf="parent"
               android:textColor="@color/colorWhite"
               android:textSize="@dimen/txt_size_title_big_big"
               android:layout_marginBottom="@dimen/margin_5dp_"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintBottom_toTopOf="@id/edtPhone" />
           <EditText
               android:id="@+id/edtPhone"
               android:paddingVertical="@dimen/margin_15dp_"
               android:drawableLeft="@drawable/ic_baseline_phone_android_24"
               android:drawableTint="@color/colorWhite"
               android:drawablePadding="@dimen/margin_10dp_"
               android:maxLines="1"
               android:singleLine="true"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintBottom_toTopOf="@id/edtPass"
               app:layout_constraintRight_toRightOf="parent"
               android:layout_width="match_parent"
               android:hint="Phone number"
               android:textSize="@dimen/txt_size_content"
               android:textColor="@color/colorWhite"
               android:textColorHint="@color/colorWhite"
               android:layout_marginHorizontal="@dimen/margin_25dp_"
               android:backgroundTint="@color/colorWhite"
               android:layout_height="wrap_content"/>
           <EditText
               android:id="@+id/edtPassword"
               android:paddingVertical="@dimen/margin_15dp_"
               android:drawableLeft="@drawable/ic_baseline_lock_24"
               android:drawableTint="@color/colorWhite"
               android:drawablePadding="@dimen/margin_10dp_"
               android:maxLines="1"
               android:inputType="textPassword"
               android:singleLine="true"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintBottom_toTopOf="@id/edtPass"
               app:layout_constraintRight_toRightOf="parent"
               android:layout_width="match_parent"
               android:hint="Password"
               android:textSize="@dimen/txt_size_content"
               android:textColor="@color/colorWhite"
               android:textColorHint="@color/colorWhite"
               android:layout_marginHorizontal="@dimen/margin_25dp_"
               android:backgroundTint="@color/colorWhite"
               android:layout_height="wrap_content"/>
           <EditText
               android:id="@+id/edtUserName"
               android:paddingVertical="@dimen/margin_15dp_"
               android:drawableLeft="@drawable/ic_baseline_account_circle_24"
               android:drawableTint="@color/colorWhite"
               android:drawablePadding="@dimen/margin_10dp_"
               app:layout_constraintLeft_toLeftOf="parent"
               android:maxLines="1"
               android:singleLine="true"
               app:layout_constraintBottom_toTopOf="@id/guidlineHonizatal50"
               app:layout_constraintRight_toRightOf="parent"
               android:layout_width="match_parent"
               android:hint="Username"
               android:textSize="@dimen/txt_size_content"
               android:textColor="@color/colorWhite"
               android:textColorHint="@color/colorWhite"
               android:layout_marginHorizontal="@dimen/margin_25dp_"
               android:backgroundTint="@color/colorWhite"
               android:layout_height="wrap_content"/>
           <EditText
               android:id="@+id/edtAddress"
               android:paddingVertical="@dimen/margin_15dp_"
               android:drawableLeft="@drawable/ic_baseline_add_location_24"
               android:drawableTint="@color/colorWhite"
               android:drawablePadding="@dimen/margin_10dp_"
               android:maxLines="1"
               android:singleLine="true"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintBottom_toTopOf="@id/edtPass"
               app:layout_constraintRight_toRightOf="parent"
               android:layout_width="match_parent"
               android:hint="Address"
               android:textSize="@dimen/txt_size_content"
               android:textColor="@color/colorWhite"
               android:textColorHint="@color/colorWhite"
               android:layout_marginHorizontal="@dimen/margin_25dp_"
               android:backgroundTint="@color/colorWhite"
               android:layout_height="wrap_content"/>
           <EditText
               android:id="@+id/edtHobby"
               android:paddingVertical="@dimen/margin_15dp_"
               android:drawableLeft="@drawable/ic_baseline_favorite_24"
               android:drawableTint="@color/colorWhite"
               android:drawablePadding="@dimen/margin_10dp_"
               android:maxLines="1"
               android:singleLine="true"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintBottom_toTopOf="@id/edtPass"
               app:layout_constraintRight_toRightOf="parent"
               android:layout_width="match_parent"
               android:hint="Hobby"
               android:textSize="@dimen/txt_size_content"
               android:textColor="@color/colorWhite"
               android:textColorHint="@color/colorWhite"
               android:layout_marginHorizontal="@dimen/margin_25dp_"
               android:backgroundTint="@color/colorWhite"
               android:layout_height="wrap_content"/>
           <EditText
               android:id="@+id/edtAboutYou"
               android:paddingVertical="@dimen/margin_15dp_"
               android:drawableLeft="@drawable/ic_baseline_info_24"
               android:drawableTint="@color/colorWhite"
               android:drawablePadding="@dimen/margin_10dp_"
               android:maxLines="1"
               android:singleLine="true"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintBottom_toTopOf="@id/edtPass"
               app:layout_constraintRight_toRightOf="parent"
               android:layout_width="match_parent"
               android:hint="About you"
               android:textSize="@dimen/txt_size_content"
               android:textColor="@color/colorWhite"
               android:textColorHint="@color/colorWhite"
               android:layout_marginHorizontal="@dimen/margin_25dp_"
               android:backgroundTint="@color/colorWhite"
               android:layout_height="wrap_content"/>
          <LinearLayout
              android:layout_margin="20dp"
              android:gravity="center"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <RadioGroup
                  android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">
                  <RadioButton
                      android:id="@+id/rbNam"
                      android:text="Nam"
                      android:checked="true"
                      android:textColor="@color/colorWhite"
                      android:buttonTint="@color/colorWhite"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
                  <RadioButton
                      android:id="@+id/rbNu"
                      android:text="Ná»¯"
                      android:buttonTint="@color/colorWhite"
                      android:textColor="@color/colorWhite"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
              </RadioGroup>
              <EditText
              android:id="@+id/edtPass"
                  android:layout_weight="1"
              android:paddingVertical="@dimen/margin_15dp_"
              android:drawableLeft="@drawable/ic_baseline_contact_support_24"
              android:drawableTint="@color/colorWhite"
              android:drawablePadding="@dimen/margin_10dp_"
              app:layout_constraintLeft_toLeftOf="parent"
              android:maxLines="1"
              android:inputType="number"
              android:singleLine="true"
              app:layout_constraintBottom_toTopOf="@id/guidlineHonizatal50"
              app:layout_constraintRight_toRightOf="parent"
              android:layout_width="0dp"
              android:hint="Age"
              android:textSize="@dimen/txt_size_content"
              android:textColor="@color/colorWhite"
              android:textColorHint="@color/colorWhite"
              android:layout_marginHorizontal="@dimen/margin_25dp_"
              android:backgroundTint="@color/colorWhite"
              android:layout_height="wrap_content"/>
          </LinearLayout>
           <Button
               android:id="@+id/btnRegiser"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/bg_btn_login"
               android:text="Register"
               android:layout_marginBottom="@dimen/margin_20dp_"
               android:layout_marginTop="@dimen/margin_10dp_"
               android:layout_marginHorizontal="@dimen/margin_25dp_"
               android:textSize="@dimen/txt_size_content"
               android:textColor="@color/colorBlack"
               app:layout_constraintTop_toBottomOf="@+id/guidlineHonizatal50"
               />
       </LinearLayout>
   </ScrollView>

    </layout>